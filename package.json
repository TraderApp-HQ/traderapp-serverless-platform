{
    "name": "traderapp-serverless-platform",
    "description": "traderapp-serverless-platform",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "compile": "npx tsc && node esbuild.config.js",
        "build:prep": "npm run clean && npm run compile && sam build",
        "build": "npm run build:prep --force",
        "clean": "rm -rf ./dist",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "format:write": "prettier --write .",
        "prepare": "husky",
        "deploy": "sam deploy",
        "deploy-secrets": "npx ts-node src/config/secrets/deploy-secrets.ts"
    },
    "dependencies": {
        "@aws-sdk/client-secrets-manager": "^3.675.0",
        "@aws-sdk/client-sqs": "^3.675.0",
        "@dazn/lambda-powertools-logger": "^1.28.1",
        "js-yaml": "^4.1.0",
        "sendpulse-api": "^1.1.7"
    },
    "devDependencies": {
        "@eslint/js": "^9.12.0",
        "@types/aws-lambda": "^8.10.145",
        "@types/jest": "^29.5.13",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^22.7.7",
        "@typescript-eslint/eslint-plugin": "^8.9.0",
        "@typescript-eslint/parser": "^8.9.0",
        "esbuild": "^0.24.0",
        "esbuild-plugin-alias": "^0.2.1",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^15.11.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.9.0"
    }
}
